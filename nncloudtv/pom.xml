<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.nncloudtv</groupId>
  <artifactId>nncloudtv</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>nncloudtv</name>
  <packaging>war</packaging>
  <build>
     <!-- 
     <directory>target</directory>
     <outputDirectory>${basedir}/target/${artifactId}-${version}</outputDirectory>
     <sourceDirectory>${basedir}/src/main/webapp</sourceDirectory>
      -->
     <plugins>
        <!-- mvn jetty:run -->
        <plugin>        
           <groupId>org.mortbay.jetty</groupId>
           <artifactId>maven-jetty-plugin</artifactId>
           <version>6.1.22</version>
           <configuration>
             <connectors>
                <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                   <port>8888</port>
                </connector>             
             </connectors>
	         <webAppConfig>
                <contextPath>/</contextPath>
             </webAppConfig>
             <scanIntervalSeconds>3</scanIntervalSeconds>
           </configuration>
        </plugin>
		<plugin>
		   <!-- http://repo1.maven.org/maven2/org/datanucleus/maven-datanucleus-plugin/3.0.0-m1/ -->
		   <!-- http://www.datanucleus.org/products/accessplatform_3_0/guides/maven2/index.html -->
		   <groupId>org.datanucleus</groupId>		   
		   <artifactId>maven-datanucleus-plugin</artifactId>
		   <version>3.0.0-m1</version>
		   <configuration>
		      <verbose>true</verbose>
		      <fork>false</fork>
		      <!-- the last one akes effect -->
		      <!-- 
		      <props>${basedir}/src/main/resources/datanucleus_nnuser1.properties</props>
		      <props>${basedir}/src/main/resources/datanucleus_analytics.properties</props>
		       -->
		      <props>${basedir}/src/main/resources/datanucleus_content.properties</props>
		      <log4jConfiguration>${basedir}/src/main/resources/log4j.properties</log4jConfiguration>
			</configuration>	
            <dependencies>
               <dependency>
		          <groupId>org.datanucleus</groupId>
		          <artifactId>datanucleus-core</artifactId>
		          <version>3.0.0-m1</version>
	           </dependency>
		       <dependency>
				  <groupId>org.datanucleus</groupId>
				  <artifactId>datanucleus-enhancer</artifactId>
				  <version>3.0.0-m1</version>
			   </dependency>
		       <dependency>
		          <groupId>mysql</groupId>
		          <artifactId>mysql-connector-java</artifactId>
		          <version>5.1.15</version>
		       </dependency>                        
			   <dependency>
				  <groupId>org.datanucleus</groupId>
				  <artifactId>datanucleus-rdbms</artifactId>
				  <version>3.0.0-m1</version>
			   </dependency>			   	           	
            </dependencies>	  
			<executions>
			   <execution>
			      <phase>process-classes</phase>
				  <goals>
				     <goal>enhance</goal>
				  </goals>
			   </execution>			
			</executions>
		</plugin>
     </plugins>
     <pluginManagement>
     	<plugins>
     		<!--TODO TEXT. This plugin's configuration is used in m2e only.-->
     		<plugin>
     			<groupId>org.eclipse.m2e</groupId>
     			<artifactId>lifecycle-mapping</artifactId>
     			<version>1.0.0</version>
     			<configuration>
     				<lifecycleMappingMetadata>
     					<pluginExecutions>
     						<pluginExecution>
     							<pluginExecutionFilter>
     								<groupId>org.datanucleus</groupId>
     								<artifactId>
     									maven-datanucleus-plugin
     								</artifactId>
     								<versionRange>
     									[3.0.0-m1,)
     								</versionRange>
     								<goals>
     									<goal>enhance</goal>
     								</goals>
     							</pluginExecutionFilter>
     							<action>
     								<ignore></ignore>
     							</action>
     						</pluginExecution>
     					</pluginExecutions>
     				</lifecycleMappingMetadata>
     			</configuration>
     		</plugin>
     	</plugins>
     </pluginManagement>
  </build>
  
