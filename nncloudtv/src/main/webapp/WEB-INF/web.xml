     -->
    <error-page>
      <exception-type>com.mysql.jdbc.exceptions.jdbc4.CommunicationsException</exception-type>
      <location>/database-error.xhtml</location>
    </error-page>   
    <error-page>
      <exception-type>javax.jdo.JDOFatalDataStoreException</exception-type>
      <location>/database-error.xhtml</location>
    </error-page>   
    <error-page> 
         <exception-type>java.lang.Throwable</exception-type> 
          <location>/errorThrowable.jsp</location> 
    </error-page>	
    <!-- ========================================================== --> 
    <!-- Welcome Files --> 
    <!-- ========================================================== --> 	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>	
		
	
