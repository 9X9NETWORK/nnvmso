    <!-- Define an error handler for java.lang.Throwable --> 
    <error-page> 
         <exception-type>java.lang.Throwable</exception-type> 
          <location>/errorThrowable.jsp</location> 
    </error-page>	

    <!-- ========================================================== --> 
    <!-- Welcome Files --> 
    <!-- ========================================================== --> 	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>	
	
</web-app>