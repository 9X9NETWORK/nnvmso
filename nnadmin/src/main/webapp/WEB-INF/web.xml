<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="spring" version="2.5">

    <!-- ========================================================== --> 
    <!-- Servlet --> 
    <!-- ========================================================== --> 	
	<servlet>
		<servlet-name>nnadmin</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>nnadmin</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.png</url-pattern>
	    <url-pattern>*.ico</url-pattern>    
	    <url-pattern>*.jpg</url-pattern>
	    <url-pattern>*.js</url-pattern>
	    <url-pattern>*.css</url-pattern>
	    <url-pattern>*.swf</url-pattern>
	    <url-pattern>*.css</url-pattern>
	</servlet-mapping>  	
 	<listener>
		<listener-class>
           org.springframework.web.context.ContextLoaderListener
        </listener-class>
	</listener>
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-security.xml</param-value>
	</context-param>	    		

    <!-- ========================================================== --> 
    <!-- Security --> 
    <!-- ========================================================== -->
    <filter>
      <filter-name>springSecurityFilterChain</filter-name>
      <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter> 
    <filter-mapping>
      <filter-name>springSecurityFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- ========================================================== --> 
    <!-- Error Handler --> 
    <!-- ========================================================== -->
    <error-page>
       <error-code>404</error-code> 
       <location>/WEB-INF/views/error/404.jsp</location> 
    </error-page>  
    <error-page>
       <error-code>413</error-code> 
       <location>/WEB-INF/views/error/404.jsp</location> 
    </error-page>
    <error-page>
       <error-code>415</error-code> 
       <!-- change to error handler -->
       <location>/WEB-INF/views/error/415.jsp</location> 
    </error-page>
    <error-page>
       <error-code>503</error-code> 
       <location>/WEB-INF/views/error/503.jsp</location> 
    </error-page>
    <!--   
    <error-page> 
       <exception-type>java.lang.NoClassDefFoundError</exception-type> 
       <location>/WEB-INF/views/error/error.jsp</location> 
    </error-page>
    <error-page>
	   <exception-type>java.lang.Exception</exception-type>
	   <location>/WEB-INF/views/error/error.jsp</location>
    </error-page>
     -->      
    <error-page>
	   <exception-type>java.lang.Throwable</exception-type>
	   <location>/WEB-INF/views/error/error.jsp</location>
    </error-page>
    	
</web-app>
